<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Custom theme attribute to store the current theme mode -->
        <item name="appThemeMode">0</item>
        <!-- Customize your light mode styles here -->
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- Add any other styles you want for light mode -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Custom theme attribute to store the current theme mode -->
        <item name="appThemeMode">1</item>
        <!-- Customize your dark mode styles here -->
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Add any other styles you want for dark mode -->
    </style>
</resources>